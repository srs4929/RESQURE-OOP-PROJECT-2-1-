<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: white;" stylesheets="@css/front.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.disaster.VolunteerTasks">
    <children>
        <!-- Title Label -->
        <Label layoutX="20.0" layoutY="20.0" prefHeight="28.0" prefWidth="225.0" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #00b300;" text="Assigned Tasks" textFill="#e0ffc0" />
        <Button fx:id="HomeButton" layoutX="718.0" layoutY="13.0" mnemonicParsing="false" onAction="#handleHome" prefHeight="28.0" prefWidth="67.0" style="-fx-background-color: green; -fx-text-fill: white;" stylesheets="@css/front.css" text="Home">
         <font>
            <Font size="14.0" />
         </font></Button>
        <!-- Search Bar -->
        <Label layoutX="20.0" layoutY="64.0" prefHeight="28.0" prefWidth="67.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Search: " textFill="#030a01">
         <font>
            <Font name="Candara Bold" size="24.0" />
         </font></Label>
        <TextField fx:id="searchField" layoutX="80.0" layoutY="65.0" prefWidth="250.0" promptText="Search by location..." />
        <Button fx:id="searchButton" layoutX="340.0" layoutY="65.0" style="-fx-background-color: #00b300; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5px;" stylesheets="@css/front.css" text="Search" />

        <!-- Scrollable FlowPane for Tasks -->
        <ScrollPane fx:id="scrollPane" layoutX="20.0" layoutY="120.0" prefHeight="320.0" prefWidth="760.0" style="-fx-background-color: transparent; -fx-border-color: #D0D3D9; -fx-border-radius: 5px;">
            <content>
                <FlowPane fx:id="taskFlowPane" hgap="10.0" prefHeight="90" prefWidth="500" style="-fx-padding: 10.0;" vgap="10.0" />
            </content>
        </ScrollPane>

        <Button fx:id="submitReportButton" layoutX="20.0" layoutY="460.0" prefWidth="180.0" style="-fx-background-color: #0ab74f; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5px;" stylesheets="@css/front.css" text="Submit a Report" />
    </children>
</AnchorPane>
